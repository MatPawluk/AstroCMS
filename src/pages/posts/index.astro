---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { usePostsStore } from '../../lib/firebase';

// Pobierz wszystkie opublikowane wpisy
const postsStore = usePostsStore();
const allPosts = await postsStore.getAllPosts(true);
---

<BaseLayout title="Blog">
	<div class="bg-white py-24 sm:py-32">
		<div class="mx-auto max-w-7xl px-6 lg:px-8">
			<div class="mx-auto max-w-2xl text-center">
				<h1 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Blog</h1>
				<p class="mt-2 text-lg leading-8 text-gray-600">Wszystkie artykuły i wpisy na naszym blogu.</p>
			</div>

			{
				allPosts.length === 0 ? (
					<div class="mt-16 text-center">
						<p class="text-gray-500">Brak wpisów do wyświetlenia.</p>
					</div>
				) : (
					<div class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
						{allPosts.map(post => (
							<article class="flex flex-col items-start">
								<div class="group relative">
									<h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
										<a href={`/posts/${post.slug}`}>
											<span class="absolute inset-0" />
											{post.title}
										</a>
									</h3>
									<p class="mt-5 line-clamp-3 text-sm leading-6 text-gray-600">
										{post.excerpt || post.content.substring(0, 150) + '...'}
									</p>
								</div>
								<div class="relative mt-8 flex items-center gap-x-4">
									<div class="text-sm leading-6">
										<p class="font-semibold text-gray-900">{post.author}</p>
										<p class="text-gray-600">
											{post.publishedAt && new Date(post.publishedAt.seconds * 1000).toLocaleDateString('pl-PL')}
										</p>
									</div>
								</div>
							</article>
						))}
					</div>
				)
			}
		</div>
	</div>
</BaseLayout>
